<%= semantic_form_for(@person) do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs :name => "Your Secret Santa details" do %>
   <%= f.input :name %>
   <%= f.input :email %>
   <%= f.input :email_confirmation if @person.new_record? %>
   <%= f.input :wishlist %>
   <%= f.input :avoiding_giving_to, as: :select, collection: Person.where.not(id: @person.id).pluck(:name, :id) if is_admin? %>
 <% end %>

 <%= f.actions do %>
   <%= f.action :submit, :as => :button, label: 'Save' %>
   <%= f.action :cancel, :as => :link, label: 'Cancel' %>
 <% end %>
<% end %>
