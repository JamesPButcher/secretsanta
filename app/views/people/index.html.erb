<h1>Secret Santa!</h1>

<br/>

<h4>Reminder: $30 dollar spending limit!</h4>

<table class='table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Giving to (scrambled)</th>
      <% if is_admin? %>
      <th>Receiving from (scrambled)</th>
      <% end %>
      <th>Wishlist</th>
      <% if is_admin? %>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.email %></td>
        <td><%= person.giving_to %></td>
        <% if is_admin? %>
        <td><%= person.receiving_from %></td>
        <% end %>
        <td><%= person.wishlist.blank? ? 'Not provided' : 'Provided' %></td>
        <% if is_admin? %>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Email', email_by_name_path(URI.encode(person.name)) %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add yourself as a Secret Santa!', new_person_path, class: 'btn btn-success btn-lg' %>

<% if is_admin? %>
<%= link_to 'Automatch', redo_path, class: 'btn btn-default' %>
<%= link_to 'Reset recipients', reset_path, class: 'btn btn-default' %>
<%= link_to 'Email everyone', email_everyone_path, class: 'btn btn-default' %>
<% end %>